{
  "name": "kickoff-app",
  "version": "1.0.0",
  "description": "A clean Electron app for image minimization",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "watch": "tsc -w",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win"
  },
  "keywords": ["electron", "image", "compression"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "sharp": "^0.33.0",
    "puppeteer-core": "^21.6.0",
    "@sparticuz/chromium": "^119.0.0"
  },
  "build": {
    "appId": "com.kickoff.image-minimizer",
    "productName": "Image Minimizer",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "node_modules/**/*"
    ]
  }
}

